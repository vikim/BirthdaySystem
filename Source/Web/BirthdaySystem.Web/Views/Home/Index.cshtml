@model ICollection<BirthdaySystem.Web.ViewModels.Home.VoteModel>

@{
    ViewBag.Title = "Past Votes";
}

<h1>@ViewBag.Title</h1>

<table class="table-bordered">
    <tr class="text-center text-primary">
        <th class="col-md-4">Initiator Name</th>
        <th class="col-md-4">Birthday for</th>
        <th class="col-md-1">Vote Start Date</th>
        <th class="col-md-1">Vote End Date</th>
        <th class="col-md-1">Year</th>
    </tr>
    @foreach (var vote in Model)
    {
        <tr class ="text-center">
            <td>@vote.Initiator.FirstName @vote.Initiator.LastName</td>
            <td>@vote.BirthdayPerson.FirstName @vote.BirthdayPerson.LastName</td>
            <td>@vote.StartDate.ToShortDateString()</td>
            <td>@vote.EndDate.Value.ToShortDateString()</td>
            <td>@vote.Year</td>
        </tr>
    }
</table>